---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Toggle } from 'astro-theme-toggle';
---

<header>
    <nav>
        <div class="logo-section">
            <img src="https://assets.hackclub.com/flag-standalone.svg" width="128" height="128" alt="Hack Club Flag"/>
        </div>
        
        <div class="nav-section">
            <div class="internal-links">
                <HeaderLink href="/">Start</HeaderLink>
                <HeaderLink href="/blog">Ping-uri</HeaderLink>
                <HeaderLink href="/about">Cine suntem</HeaderLink>
            </div>
        </div>
        
        <div class="toggle-section">
            <Toggle class="theme-toggle" />
        </div>
    </nav>
</header>

<style>
    header {
        margin: 0;
        padding: 0 1em;
        box-shadow: 0 2px 8px rgba(var(--black), 5%);
    }
    
    nav {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .logo-section {
        justify-self: start;
        display: flex;
        align-items: center;
    }
    
    .nav-section {
        justify-self: center;
    }
    
    .toggle-section {
        justify-self: end;
    }
    
    .internal-links {
        display: flex;
        justify-content: center;
        gap: 0.5em;
    }
    
    nav a {
        padding: 1em 0.5em;
        color: rgb(var(--black));
        border-bottom: 4px solid transparent;
        text-decoration: none;
    }
    
    nav a.active {
        text-decoration: none;
        border-bottom-color: var(--accent);
    }
    
    .theme-toggle {
        width: 32px;
        height: 32px;
    }
    
    @media (max-width: 768px) {
        /* Keep the grid layout but adjust proportions */
        nav {
            grid-template-columns: auto 1fr auto;
            column-gap: 1em;
        }
        
        .internal-links {
            gap: 0.2em;
        }
        
        nav a {
            padding: 1em 0.2em;
            font-size: 0.9em;
        }
        
        .logo-section img {
            width: 60px;
            height: 60px;
        }
    }
    
    @media (max-width: 480px) {
        .internal-links {
            gap: 0;
        }
        
        nav a {
            padding: 1em 0.15em;
            font-size: 0.8em;
        }
        
        .logo-section img {
            width: 45px;
            height: 45px;
        }
        
        .theme-toggle {
            width: 28px;
            height: 28px;
        }
    }
</style>